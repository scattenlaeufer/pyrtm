<MainBox>:
	orientation: "vertical"
	TabbedPanel:
		do_default_tab: False
		TabbedPanelItem:
			text: 'test'
			BoxLayout:
				orientation: 'vertical'
				Label:
					id: blubb
					text: 'test'
		TabbedPanelItem:
			id: all_talents
			text: 'all talents'


<StartLayout>:
	cols: 2
	spacing: 5

<InfoPopup>:
	size_hint: .5, .7
	BoxLayout:
		orientation: "vertical"
		ScrollView:
			#size_hint: 1, None
			BoxLayout:
				orientation: 'vertical'
				#size_hint_y: None
				#height: self.minium_height
				Label:
					id: label_info
					#default_size: None, dp(56)
					#default_size_hint: 1, None
					#size_hint_y: None
					markup: True
					text_size: self.width-20, self.height-20
					valign: 'middle'
					halign: 'left'
		Button:
			size_hint: 1, .15
			text: 'Ok'
			on_press: root.dismiss()
